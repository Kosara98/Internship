@model IEnumerable<MVCFurnitureShop.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h1>Clients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bulstat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisteredVat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bulstat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisteredVat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>